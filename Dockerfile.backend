# Dockerfile.backend
FROM python:3.11-slim

WORKDIR /app

# ğŸ› ï¸ Fix: Replace libmysqlclient-dev with MariaDB equivalents
RUN apt-get update && \
    apt-get install -y gcc libmariadb-dev default-libmysqlclient-dev && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# ğŸ“¦ Install Python dependencies
COPY backend/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# ğŸ“‚ Copy backend code
COPY backend/ .

# ğŸš€ Run the scraper
CMD ["python", "scrapper.py"]
